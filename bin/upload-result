#!/bin/bash

if [ $# -eq 0 ]; then
    echo "[ERROR] Please provide the full path of the file you wish to upload"
    exit 1
fi

args=("$@")
fileToUpload=${args[0]}

if [ ! -f ${fileToUpload} ]; then
    echo "[ERROR] File not found!"
    exit 2
fi

if [ -z "${EXTERNAL_SHARING_SERVICE_APITOKEN}" ]; then
    echo "[ERROR] Env variable EXTERNAL_SHARING_SERVICE_APITOKEN not set or empty, cannot proceed without the API token!"
    exit 3
fi

if [ -z "${EXTERNAL_SHARING_SERVICE_URL}" ]; then
    echo "[ERROR] Env variable EXTERNAL_SHARING_SERVICE_URL not set or empty, cannot proceed without base URL of the external sharing service!"
    exit 4
fi


echo "Uploading ${fileToUpload}"

curl -v --header "authorization: apitoken ${EXTERNAL_SHARING_SERVICE_APITOKEN}" -F file=@${fileToUpload} ${EXTERNAL_SHARING_SERVICE_URL}/result/email 